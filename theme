#!/bin/bash

# ================================
#   ğŸ¨ Pterodactyl Theme Menu
# ================================

while true; do
    clear
    echo "======================================"
    echo " ğŸ¨ PTERODACTYL THEME INSTALLER"
    echo "======================================"
    echo "1) ğŸš€ Install Nebula Theme (One Click)"
    echo "2) ğŸŒ™ Install Nook Theme"
    echo "3) ğŸ—‘ï¸  Uninstall Theme"
    echo "0) âŒ Exit"
    echo "--------------------------------------"
    read -p "Choose an option: " choice

    case $choice in
        1)
            clear
            echo "==============================================="
            echo " ğŸš€ Installing Nebula Theme..."
            echo "==============================================="

            # Safety check
            if [ ! -d "/var/www/pterodactyl" ]; then
                echo "âŒ Pterodactyl not found in /var/www/pterodactyl"
                exit 1
            fi

            cd /root || exit 1

            # Clean old folder
            rm -rf IPV6-Nebula

            # Clone repo
            git clone https://github.com/ParaNoob123/IPV6-Nebula

            # Move blueprint
            mv IPV6-Nebula/nebula.blueprint /var/www/pterodactyl/

            # Install theme
            cd /var/www/pterodactyl || exit 1
            blueprint -install nebula

            echo ""
            echo "âœ… Nebula Theme installed successfully!"
            echo "ğŸ” Restart panel & wings recommended"
            ;;
        2)
            clear
            echo "==============================================="
            echo " ğŸŒ™ Installing Nook Theme..."
            echo "==============================================="

            bash <(curl -sSL https://raw.githubusercontent.com/ItsMePara123/GG/refs/heads/main/nookthemeinstall)

            echo ""
            echo "âœ… Nook Theme installed successfully!"
            ;;
        3)
            clear
            echo "==============================================="
            echo " ğŸ—‘ï¸  Uninstalling Theme..."
            echo "==============================================="

            bash <(curl -sSL https://raw.githubusercontent.com/ItsMePara123/GG/refs/heads/main/uninstalltheme)

            echo ""
            echo "âœ… Theme uninstalled & panel restored!"
            ;;
        0)
            echo "ğŸ‘‹ Exiting..."
            exit 0
            ;;
        *)
            echo "âŒ Invalid option!"
            ;;
    esac

    echo ""
    read -p "Press Enter to return to menu..."
done
